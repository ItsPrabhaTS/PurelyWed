<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ui.HomeFragment">

    <!-- Icon Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@color/white"
        android:elevation="16dp"
        android:weightSum="5">

        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnVenue"
            android:layout_weight="1"
            android:src="@drawable/baseline_house_24"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="@color/primary"
            android:padding="8dp" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btnCamera"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/baseline_camera_enhance_24"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="@color/primary"
            android:padding="8dp" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btnFood"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/baseline_flatware_24"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="@color/primary"
            android:padding="8dp" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btnMehndi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/baseline_front_hand_24"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="@color/primary"
            android:padding="8dp" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btnTour"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/baseline_flight_takeoff_24"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="@color/primary"
            android:padding="8dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to PurelyWed."
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/primary"
        android:padding="16dp" />

    <!-- Content container for fragments -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/homeFragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
