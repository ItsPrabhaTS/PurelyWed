<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/application_navigation"
    app:startDestination="@id/loading">


    <fragment
        android:id="@+id/loading"
        android:name="com.example.purelywed.ui.Loading"
        android:label="fragment_loading"
        tools:layout="@layout/fragment_loading" >
        <action
            android:id="@+id/action_loading_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/loading"
            app:popUpToInclusive="true"/>
        <action
            android:id="@+id/action_loading_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/loading"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.purelywed.ui.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.purelywed.ui.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" />
</navigation>